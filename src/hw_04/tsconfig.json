{
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"types": ["node", "../global.d.ts"],
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
